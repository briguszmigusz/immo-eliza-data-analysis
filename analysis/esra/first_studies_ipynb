# Örnek: Livable surface temizleme
df['Livable surface'] = df['Livable surface'].astype(str)
df['Livable surface'] = df['Livable surface'].str.replace(r'\s*m²', '', regex=True)  # ' m²' kaldır
df['Livable surface'] = df['Livable surface'].str.replace(r'\s+', '', regex=True)    # boşluk temizle
df['Livable surface'] = pd.to_numeric(df['Livable surface'], errors='coerce')       # sayıya çevir
print(df['Livable surface'].head())

df['Number of bedrooms'] = pd.to_numeric(df['Number of bedrooms'], errors='coerce')
df['Number of bedrooms'] = df['Number of bedrooms'].astype('Int64')
print(df['Number of bedrooms'].head())
